
<h1>Listing Notes</h1>
 
<table>
  <tr>
    <th>Title</th>
    <th>Content</th>
    <th>Tags</th>
    <th></th>
  </tr>
 

  <% @notes.each do |note| %>
    <tr>
      <td><%= note.title %></td>
      <td><%= note.content %></td>
      <td><% note.tag_list.each do |tag| %>
        <%= link_to tag, tagged_path(tag: tag) %>
        <% end %></td>
      <td><%= link_to 'Show', note_path(note) %></td>
      <td><%= link_to 'Edit', edit_note_path(note) %>
      <td><%= link_to 'Destroy', note_path(note), 
              method: :delete,
              data: { confirm: 'Are you sure?'} %></td>
    </tr>

  <% end %>

<%= link_to 'New Note', new_note_path %>


     
